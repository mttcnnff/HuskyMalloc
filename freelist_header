#ifndef FREELIST_H
#define FREELIST_H

// Free List Requirements:
// Singly Linked List
// Sorted by Address
// Insert into free list
// remove from free list
// Join two adjacent blocks

typedef struct freeblock {
	size_t size;
	struct freeblock* next;
} freeblock;

void freelist_insert(freeblock** head, void* addition);
freeblock* freelist_remove(freeblock** head, freeblock* block);
void* freelist_getblock(freeblock** head, size_t size);
void freelist_print(freeblock* head);
int freelist_sorted(freeblock* head);
int freelist_getsize(freeblock* head);

freeblock* freeblock_make(void* address);
void freeblock_print(freeblock* block);


#endif
